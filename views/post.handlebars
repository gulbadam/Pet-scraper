
<div class="container">
    <div class="box">
<div class="card">
    {{#if post}}
    <header class="card-header">
        <p class="card-header-title">
            {{post.title}}
        </p>
        </header>
    {{#if post.notes}}
    {{#each post.notes}}
    <div class="card-content">
        <div class="content">
            <article class="message is-info">
                <!--<button class="delete del-note" aria-label="delete" data-id="{{this._id}}" data-post-id="{{post._id}}"></button>-->
                <div class="message-body">
                    <div>{{this.body}}
                    </div>
                    <div>{{this.updatedAt}}
                    </div>
                </article>
            </div>
    </div>
    {{/each}}
    {{/if}}
    <div class="box">
        <form action="/api/posts/notes/{{post._id}}" method="POST">
    <div class="field is-small">
        <label class="label">Note</label>
        <div class="control">
            <textarea name="body" class="textarea" placeholder="Add Note" required="required"></textarea>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link" data-id="{{post._id}}" id="subNote">Submit</button>
            </div>
        </div>
        </div>
        </form>
        
    {{/if}}
</div>
</div>
</div>
</div>
<div  id="scr-mode" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
        <button class="delete mod-close" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
        </section>
        <footer class="modal-card-foot">
        </footer>
    </div>
</div>
